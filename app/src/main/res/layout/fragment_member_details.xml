<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_member_details_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp">


    <LinearLayout
        android:id="@+id/ll_imageview_member_details"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


       <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_member_details_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/black"
           app:civ_circle_background_color="@color/darkpurple"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_tv_member_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_imageview_member_details"
        android:background="@drawable/border"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_person"
            android:layout_margin="15dp"
            />
        <TextView
            android:id="@+id/tv_member_details_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            android:textSize="20dp"
            android:layout_margin="8dp"
            android:fontFamily="@font/comfortaa"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_tv_member_surname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_tv_member_name"
        android:background="@drawable/border">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_person"
            android:layout_margin="15dp"/>
        <TextView
            android:id="@+id/tv_member_details_surname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            android:textSize="20dp"
            android:layout_margin="8dp"
            android:fontFamily="@font/comfortaa"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_tv_member_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_tv_member_surname"
        android:background="@drawable/border">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_email"
            android:layout_margin="15dp"/>
        <TextView
            android:id="@+id/tv_member_details_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            android:textSize="20dp"
            android:layout_margin="8dp"
            android:fontFamily="@font/comfortaa"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_tv_member_details_phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_tv_member_email"
        android:background="@drawable/border">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_phone"
            android:layout_margin="15dp"/>
        <TextView
            android:id="@+id/tv_member_details_phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="left"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            android:textSize="20dp"
            android:layout_margin="8dp"
            android:fontFamily="@font/comfortaa"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btn_trainings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Trainings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_tv_member_details_phoneNumber"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        android:fontFamily="@font/barlow_medium"
        android:textSize="20dp"
        />
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_back_to_member_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:icon="@drawable/ic_arrow_forward"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Member List"
        android:backgroundTint="@color/purple"
        android:fontFamily="@font/barlow_medium"
        android:textColor="@color/white"
        app:iconTint="@color/white"
        />
</androidx.constraintlayout.widget.ConstraintLayout>