<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp">

    <TextView
        android:id="@+id/titleNewMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:fontFamily="@font/sansita"
        android:text="Add New Member"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleNewMember"
        android:hint="Name"
        app:startIconDrawable="@drawable/ic_person"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/comfortaa">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_member_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:fontFamily="@font/comfortaa"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_surname_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_name_input"
        android:hint="Surname"
        android:layout_marginHorizontal="10dp"
        app:startIconDrawable="@drawable/ic_person"
        android:fontFamily="@font/comfortaa">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_member_surname_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:fontFamily="@font/comfortaa"

            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_email_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_surname_input"
        android:hint="Email"
        android:layout_marginHorizontal="10dp"
        app:startIconDrawable="@drawable/ic_email"
        android:fontFamily="@font/comfortaa">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_member_email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/comfortaa"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_phoneNumber_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_email_input"
        android:hint="Phone number"
        android:layout_marginHorizontal="10dp"
        app:startIconDrawable="@drawable/ic_phone"
        android:fontFamily="@font/comfortaa">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_member_phoneNumber_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:fontFamily="@font/comfortaa"

            />
    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:id="@+id/ll_imageview_newmember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/til_phoneNumber_input"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp">
        <ImageButton
            android:id="@+id/profile_image"
            android:layout_width="200dp"
            android:layout_height="200dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/buttonLoadPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Picture"
        android:fontFamily="@font/barlow_medium"
        app:layout_constraintTop_toBottomOf="@+id/ll_imageview_newmember"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="15dp"
        android:backgroundTint="@color/purple"
        />

    <Button
        android:id="@+id/b_save_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:fontFamily="@font/barlow_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        android:backgroundTint="@color/purple"/>


</androidx.constraintlayout.widget.ConstraintLayout>